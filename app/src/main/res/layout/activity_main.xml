<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".MainActivity"
        android:background="@drawable/background_gradient"
        tools:ignore="ExtraText">

        <!-- Title TextView -->
        <TextView
            android:id="@+id/app_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lori's Inspirational Quotes"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:padding="16dp" />

        <!-- CardView for Quote or Loading Spinner -->
        <androidx.cardview.widget.CardView
            android:id="@+id/quote_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <!-- FrameLayout to enable touch detection -->
            <FrameLayout
                android:id="@+id/quote_card_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Loading Spinner -->
                <ProgressBar
                    android:id="@+id/loading_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <!-- Quote Text -->
                <TextView
                    android:id="@+id/quote_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:visibility="gone"
                    android:fontFamily="sans-serif-cursive"
                    android:padding="16dp" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Instructional Text -->

        <!-- Share Button with Icon -->

        <TextView
            android:id="@+id/instruction_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quote_card"
            android:layout_marginTop="115dp"
            android:text="Swipe left on the card to load the next quote. All inspirational quotes provided by Lori Jones-Harden."
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_share" />
    </RelativeLayout>
</layout>
